<%- include ('partials/header') -%>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include ('partials/sidebar') -%>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include ('partials/topbar') -%>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-primary">ToDo List</h1>
                        <a id="createNewBtn" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                            <i class="fas fa-circle-plus fa-sm text-white-50"></i> &nbsp; Create New</a>
                    </div>
                    
                     <!-- Create New List Form -->
                    <div id="createNewSec" class="card" style="display: none">
                        <form id="createTodo" action="/lists/createTodo" method="POST"></form>
                        <table class="table table-sm table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" colspan="5"><input form="createTodo" class="form-control" type="text" name="listName" placeholder="Enter List Name" style="text-align: center"></th>
                                </tr>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Task</th>
                                    <th scope="col">Due Date</th>
                                    <th scope="col">Recurrent</th>
                                    <th scope="col">Frequency</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td><input form="createTodo" class="custom-control-sm" type="text" placeholder="Task" name="taskName"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="date" placeholder="Due Date" name="dueDate"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="checkbox" name="recurrent"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="number" placeholder="Number of days" name="frequency"></td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td><input form="createTodo" class="custom-control-sm" type="text" placeholder="Task" name="taskName"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="date" placeholder="Due Date" name="dueDate"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="checkbox" name="recurrent"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="number" placeholder="Number of days" name="frequency"></td>
                                </tr>
                                <tr>
                                    <th scope="row">3</th>
                                    <td><input form="createTodo" class="custom-control-sm" type="text" placeholder="Task" name="taskName"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="date" placeholder="Due Date" name="dueDate"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="checkbox" name="recurrent"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="number" placeholder="Number of days" name="frequency"></td>
                                </tr>
                                <tr>
                                    <th scope="row">4</th>
                                    <td><input form="createTodo" class="custom-control-sm" type="text" placeholder="Task" name="taskName"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="date" placeholder="Due Date" name="dueDate"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="checkbox" name="recurrent"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="number" placeholder="Number of days" name="frequency"></td>
                                </tr>
                                <tr>
                                    <th scope="row">5</th>
                                    <td><input form="createTodo" class="custom-control-sm" type="text" placeholder="Task" name="taskName"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="date" placeholder="Due Date" name="dueDate"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="checkbox" name="recurrent"></td>
                                    <td><input form="createTodo" class="custom-control-sm" type="number" placeholder="Number of days" name="frequency"></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="row justify-content-center">
                            <button form="createTodo" class="btn btn-sm btn-primary shadow-sm" type="submit">Save</button>
                        </div>
                        <br>
                    </div>
                    <br>
                    <!-- Get All Lists -->
                    <% for (var i=0; i<lists.length; i++) { %>
                        <!-- List -->
                        <div class="row">
                            <div class="col-xl-4 col-xl">
                                <div class="card shadow mb-4">

                                    <!-- Card Header - Dropdown -->
                                    <div
                                        class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                        <h6 class="m-0 font-weight-bold text-primary"><%= lists[i].title %></h6>
                                        <%- include ('partials/listmenu', {list: lists[i]}) -%>
                                    </div>

                                    <!-- Card Body - Tasks -->
                                    <div class="card-body">
                                        <ol>
                                            <% for (var j=0; j<tasks.length; j++) { %>
                                                <% if (tasks[j].list.toString() == lists[i]._id.toString()) { %>
                                                    <li><%= tasks[j].title %></li>
                                                <% } %>
                                            <% } %>
                                        </ol>
                                        <div id="addTaskSec" style="display: none">
                                            <form id="addTask" action="/lists/addTask/<%= lists[i]._id %>" method="POST"></form>
                                            <table class="table table-sm">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Task</th>
                                                        <th scope="col">Due Date</th>
                                                        <th scope="col">Recurrent</th>
                                                        <th scope="col">Frequency</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <th scope="row">1</th>
                                                        <td><input form="addTask" class="custom-control-sm" type="text" placeholder="Task" name="taskName"></td>
                                                        <td><input form="addTask" class="custom-control-sm" type="date" placeholder="Due Date" name="dueDate"></td>
                                                        <td><input form="addTask" class="custom-control-sm" type="checkbox" name="recurrent"></td>
                                                        <td><input form="addTask" class="custom-control-sm" type="number" placeholder="Number of days" name="frequency"></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                            <div class="row justify-content-center">
                                                <button form="addTask" class="btn btn-sm btn-primary shadow-sm" type="submit">Add</button>
                                            </div>
                                            <br>
                                        </div>
                                        <a id="addTaskBtn" class="float-right btn btn-sm btn-primary shadow-sm" style="border-radius: 50%; opacity: 75%"><i class="fas fa-plus fa-sm"></i></a> 
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <%- include ('partials/footer') -%>

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <%- include ('partials/modal') -%>
    
<%- include ('partials/scripts') -%>