<%- include ('partials/header') -%>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include ('partials/sidebar') -%>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include ('partials/topbar') -%>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
                        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                                class="fas fa-download fa-sm text-white-50"></i> Create New</a>
                    </div>
                    
                     <!-- Create New List Form -->
                     <div class="row">
                        <div class="col-xl-4 col-lg-5">
                            <div class="card shadow mb-4">
                                <form id="createList" action="/lists/createTodo" method="POST">
                                    <label name="listName"> 
                                        <input type="text" placeholder="List Name" name="listName">
                                        List Name:
                                    </label>
                                    <label name="listType">
                                        <input type="text" placeholder="List Type" name="listType" value="Todo" >
                                        List Type:
                                    </label>
                                    <button type="submit">Create</button>
                                </form>
                                <!-- <form id="createTask" action="/lists/createTask" method="POST">
                                    <label name="taskName"> 
                                        <input type="text" placeholder="Task" name="taskName">
                                        Task:
                                    </label>
                                    <label name="dueDate">
                                        <input type="date" placeholder="Due Date" name="dueDate">
                                        Due:
                                    </label>
                                    <button type="submit">Add</button>
                                </form> -->
                            </div>
                        </div>
                    </div>

                    <!-- Get All Lists -->
                    <% for (let i=0; i<lists.length; i++) { %>

                        <!-- List -->
                        <div class="row">
                            <div class="col-xl-4 col-lg-5">
                                <div class="card shadow mb-4">

                                    <!-- Card Header - Dropdown -->
                                    <div
                                        class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                        <h6 class="m-0 font-weight-bold text-primary"><%= lists[i].title %></h6>
                                        <%- include ('partials/listmenu') -%>
                                    </div>

                                    <!-- Card Body - Tasks -->
                                    <div class="card-body">
                                        <ul>
                                            <% for (let i=0; i<tasks.length; i++) { %>
                                                <%= tasks[i].title%>
                                            <% } %>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <%- include ('partials/footer') -%>

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <%- include ('partials/modal') -%>
    
<%- include ('partials/scripts') -%>